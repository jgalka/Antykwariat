@model Antykwariat.Models.Ksiazka

@{
    ViewBag.Title = "NowyWpis";
}

<h2>NowyWpis</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Ksiazka</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.GatunekId, "Gatunek")
        </div>
        <div class="editor-field">
            @Html.DropDownList("GatunekId", String.Empty)
            @Html.ValidationMessageFor(model => model.GatunekId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AutorId, "Autor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AutorId", String.Empty)
            @Html.ValidationMessageFor(model => model.AutorId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tytul)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tytul)
            @Html.ValidationMessageFor(model => model.Tytul)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cena)
            @Html.ValidationMessageFor(model => model.Cena)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Okladka)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Okladka)
            @Html.ValidationMessageFor(model => model.Okladka)
        </div>

        <p>
            <input type="submit" value="NowyWpis" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>
